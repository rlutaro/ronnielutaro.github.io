    "@codemirror/lang-markdown": "^6.3.1",
    "@codemirror/theme-one-dark": "^6.1.2",
    "@mdx-js/loader": "^3.1.0",
    "@mdx-js/mdx": "^3.1.0",
    "@mdx-js/react": "^3.1.0",
    "@mdxeditor/editor": "^3.20.0",
