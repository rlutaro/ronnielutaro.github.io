{
  "name": "ronnie-blog",
  "version": "0.1.0",
  "private": true,
  "author": "Ronnie Lutaro <ronnielutaro@outlook.com> (@theronnielutaro)",
  "license": "MIT",
  "keywords": [
    "nextjs",
    "blog",
    "typescript",
    "ronnie lutaro",
    "innovation",
    "technical product development"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next lint --fix && ts-node scripts/generate-slugs.ts && ts-node scripts/generate-posts-json.ts && ts-node scripts/update-reading-time.ts && ts-node scripts/generate-pwa-icons.ts && next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "test": "echo \"No test specified\" && exit 1",
    "clean": "rm -rf .next node_modules",
    "postinstall": "node ./fonts/init.mjs",
    "generate-pwa-icons": "ts-node scripts/generate-pwa-icons.ts",
    "generate-slugs": "ts-node scripts/generate-slugs.ts",
    "generate-posts-json": "ts-node scripts/generate-posts-json.ts",
    "create-blog": "ts-node scripts/create-blog.ts && ts-node scripts/generate-pwa-icons.ts",
    "create-post": "ts-node scripts/create-post.ts && ts-node scripts/generate-slugs.ts && ts-node scripts/update-reading-time.ts",
    "update-reading-time": "ts-node scripts/update-reading-time.ts"
  },
  "dependencies": {
    "@azure/cosmos": "^4.3.0",
    "@fontsource/inter": "^5.1.0",
    "@fontsource/roboto-mono": "^5.1.0",
