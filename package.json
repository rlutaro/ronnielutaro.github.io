    "katex": "^0.16.21",
    "lucide-react": "^0.473.0",
    "next": "^15.0.3",
    "next-mdx-remote": "^5.0.0",
    "next-pwa": "^5.6.0",
    "next-scroll-restorer": "^0.9.7",
    "react-katex": "^3.0.1",
    "react-social-media-embed": "^2.5.17",
    "react-spinners": "^0.15.0",
    "react-tweet": "^3.1.1",
    "react-wrap-balancer": "^1.1.1",
