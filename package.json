    "eslint-config-next": "15.0.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "formik": "^2.4.6",
    "fs-extra": "^11.2.0",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
